<h2>Search Authors</h2>
<form action="/authors" method="GET">                              <!-- Form for searching author -->
    <label for="name">Name</label>                          
    <input type="text" name="name" id="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>

<br>

<!-- Showing all authors -->
<% for (let author of allAuthors) { %>
    <div><%= author.name %></div> 
<% } %>